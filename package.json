{
  "name": "TinymceEditor",
  "version": "1.0.0",
  "files": [
    "dist/*",
    "src/**/*.vue"
  ],
  "main": "dist/TinymceEditor.common.js",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build-package": "vue-cli-service build --target lib --name TinymceEditor ./src/index.js",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@tinymce/tinymce-vue": "^3.2.8",
    "core-js": "^3.6.5",
    "tinymce": "^5.6.2",
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^6.2.2",
    "prettier": "^1.19.1",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/prettier"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "no-var": "error",
      "no-useless-escape": "off",
      "no-console": "off",
      "prefer-const": "off",
      "object-shorthand": "off",
      "vue/order-in-components": "off",
      "vue/multi-word-component-names": "off",
      "multi-word": "off",
      "no-unused-expressions": "off",
      "vue/no-template-shadow": "off",
      "vue/require-prop-types": "off",
      "vue/require-default-prop": "off",
      "vue/attributes-order": "off",
      "vue/no-v-html": "off",
      "no-template-curly-in-string": "off",
      "prettier/prettier": [
        "error",
        {
          "printWidth": 150, 
          "tabWidth": 2, 
          "useTabs": false, 
          "singleQuote": true, 
          "semi": false, 
          "trailingComma": "none", 
          "arrowParens": "avoid", 
          "jsxBracketSameLine": true 
        }
      ]
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "homepage": "https://github.com/limlt/vue-show-more-text.git#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/limlt/vue-show-more-text.git"
  },
  "license": "MIT",
  "keywords": [
    "vue",
    "nuxt.js",
    "ellipsis",
    "showmore",
    "showmore text"
  ]
}
